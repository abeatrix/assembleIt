<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs', {title: "Edit User Info"}) %>
<body>
    <!-- navbar -->
    <%- include('../partials/nav') %>



    <div class="submitPost">

        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
          <div class="form-group user-edit-form"><img src="<%= user.profilePic %>" style="width:200px;height:200px;"></div>
          <div class="form-group">
                <label>Username - cannot be changed</label>
                <input type="text" class="form-control" placeholder="<%= user.username %>" disabled>
            </div>
            <div class="form-group">
            <label>Upload Profile Picture here - URL ONLY</label>
            <input type="url" class="form-control" name="profilePic" value="<%= user.profilePic %>">
          </div>
            <div class="form-group">
              <label>Email address</label>
              <input type="email" name="email" class="form-control" value="<%= user.email %>">
            </div>
            <div class="submitbtn"> <input type="submit" class="btn btn-primary btn-sm" value="UPDATE"> </div>
          </form>
    </div>


    <!-- footer -->
    <%- include('../partials/footer') %>

</body>
</html>
